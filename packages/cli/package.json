{
  "name": "@mateicanavra/civ7-cli",
  "version": "0.1.0",
  "description": "CLI for managing Civilization VII modding resources.",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "civ7": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -b --force && oclif manifest && chmod +x bin/run.js",
    "dev": "bun run bin/dev.ts",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run --project cli",
    "link:global": "pnpm run build && pnpm link --global",
    "unlink:global": "pnpm unlink --global",
    "prepublishOnly": "pnpm build",
    "publish": "pnpm publish",
    "prepack": "pnpm run build && oclif readme",
    "pack": "pnpm pack",
    "postpack": "rimraf oclif.manifest.json",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@civ7/plugin-files": "workspace:*",
    "@civ7/plugin-graph": "workspace:*",
    "@civ7/plugin-mods": "workspace:*",
    "@civ7/config": "workspace:*",
    "@oclif/core": "^4.5.2",
    "@oclif/plugin-help": "^6.2.32",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "bun-types": "^1.2.19",
    "oclif": "^4.22.6",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "oclif": {
    "bin": "civ7",
    "dirname": "cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "engines": {
    "node": ">=20"
  }
}
