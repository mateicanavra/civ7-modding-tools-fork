{
  "name": "@civ7/cli",
  "version": "0.1.0",
  "description": "CLI for managing Civilization VII modding resources.",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "civ7": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -b --force && oclif manifest && chmod +x dist/index.js",
    "start": "pnpm run build && node .",
    "dev": "bun run src/index.ts",
    "publish:local": "pnpm run build && pnpm link --global",
    "crawl": "node dist/index.js crawl",
    "render": "node dist/index.js render",
    "explore": "node dist/index.js explore",
    "slice": "node dist/index.js slice",
    "zip": "node dist/index.js zip",
    "unzip": "node dist/index.js unzip",
    "pack": "pnpm pack",
    "publish": "pnpm publish",
    "prepack": "pnpm run build && oclif readme",
    "postpack": "rimraf oclif.manifest.json",
    "version": "oclif readme && git add README.md",
    "prepublishOnly": "pnpm build",
    "lint": "echo lint",
    "test": "echo test"
  },
  "dependencies": {
    "@civ7/sdk": "workspace:^",
    "@hpcc-js/wasm": "^2.22.0",
    "@oclif/core": "^4.5.2",
    "@oclif/plugin-help": "^6.2.32",
    "fast-xml-parser": "^5.2.5",
    "jsonc-parser": "^3.3.1",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "bun-types": "latest",
    "oclif": "^4.22.6",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "@civ7/config": "workspace:*"
  },
  "oclif": {
    "bin": "civ7",
    "dirname": "cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "engines": {
    "node": ">=20"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
