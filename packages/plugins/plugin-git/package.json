{
  "name": "@civ7/plugin-git",
  "version": "0.1.0",
  "private": true,
  "description": "Shared Git utilities for Civ7 monorepo packages (subtree import/push/pull, remotes, status).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.14.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "rimraf": "^6.1.2",
    "eslint": "^9.39.2"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
