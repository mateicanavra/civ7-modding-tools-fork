{
  "name": "@civ7/plugin-mods",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@civ7/plugin-files": "workspace:*",
    "@civ7/plugin-git": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "@types/node": "^22.14.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
