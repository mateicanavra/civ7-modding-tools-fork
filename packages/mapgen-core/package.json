{
  "name": "@swooper/mapgen-core",
  "version": "0.1.0",
  "description": "Pure TypeScript domain library for map generation algorithms",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./bootstrap": {
      "types": "./dist/bootstrap/entry.d.ts",
      "import": "./dist/bootstrap/entry.js"
    },
    "./polyfills/text-encoder": {
      "types": "./dist/polyfills/text-encoder.d.ts",
      "import": "./dist/polyfills/text-encoder.js"
    },
    "./pipeline": {
      "types": "./dist/pipeline/index.d.ts",
      "import": "./dist/pipeline/index.js"
    },
    "./trace": {
      "types": "./dist/trace/index.d.ts",
      "import": "./dist/trace/index.js"
    },
    "./domain": {
      "types": "./dist/domain/index.d.ts",
      "import": "./dist/domain/index.js"
    },
    "./domain/morphology": {
      "types": "./dist/domain/morphology/index.d.ts",
      "import": "./dist/domain/morphology/index.js"
    },
    "./domain/hydrology": {
      "types": "./dist/domain/hydrology/index.d.ts",
      "import": "./dist/domain/hydrology/index.js"
    },
    "./domain/ecology": {
      "types": "./dist/domain/ecology/index.d.ts",
      "import": "./dist/domain/ecology/index.js"
    },
    "./domain/narrative": {
      "types": "./dist/domain/narrative/index.d.ts",
      "import": "./dist/domain/narrative/index.js"
    },
    "./domain/placement": {
      "types": "./dist/domain/placement/index.d.ts",
      "import": "./dist/domain/placement/index.js"
    },
    "./lib/math": {
      "types": "./dist/lib/math/index.d.ts",
      "import": "./dist/lib/math/index.js"
    },
    "./lib/grid": {
      "types": "./dist/lib/grid/index.d.ts",
      "import": "./dist/lib/grid/index.js"
    },
    "./lib/rng": {
      "types": "./dist/lib/rng/index.d.ts",
      "import": "./dist/lib/rng/index.js"
    },
    "./lib/noise": {
      "types": "./dist/lib/noise/index.d.ts",
      "import": "./dist/lib/noise/index.js"
    },
    "./lib/collections": {
      "types": "./dist/lib/collections/index.d.ts",
      "import": "./dist/lib/collections/index.js"
    },
    "./base": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "precheck": "pnpm -C ../civ7-adapter build",
    "pretest": "pnpm -C ../civ7-adapter build",
    "test": "bun test",
    "check": "tsc --noEmit",
    "check:schema-defaults": "bun run ./scripts/check-schema-defaults.ts"
  },
  "dependencies": {
    "@civ7/adapter": "workspace:*",
    "@civ7/types": "workspace:*",
    "typebox": "^1.0.61"
  },
  "devDependencies": {
    "bun-types": "latest",
    "esbuild": "^0.27.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "civ7",
    "civilization",
    "modding",
    "mapgen",
    "voronoi",
    "tectonics"
  ],
  "license": "MIT"
}
