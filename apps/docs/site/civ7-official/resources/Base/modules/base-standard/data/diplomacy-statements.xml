<Database>
	<Kinds>
		<Row Kind="KIND_DIPLOMACY_STATEMENT"/>
	</Kinds>
	<!-- Helper table to map Game types to statements -->
	<TypeToDiplomacyStatements>
		<Row Type="SURPRISE_WAR" DiplomacyStatementType="DECLARE_SURPRISE_WAR"/>
	</TypeToDiplomacyStatements>
	
	<DiplomacyStatements>
