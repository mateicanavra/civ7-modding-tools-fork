		<OwnerRequirements>
			<Requirement type="REQUIREMENT_PLAYER_DISCOVERED_NATURAL_WONDER">
				<Argument name="FeatureType">FEATURE_MOUNT_EVEREST</Argument>
			</Requirement>
		</OwnerRequirements>
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLOT_TERRAIN_TYPE_MATCHES">
				<Argument name="TerrainType">TERRAIN_MOUNTAIN</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="SharesContinentFeature">FEATURE_MOUNT_EVEREST</Argument>
	</Modifier>
