		<Row Tag="SAND" Category="PLOTEFFECT_ATTRIBUTE"/>
		<Row Tag="SNOW" Category="PLOTEFFECT_ATTRIBUTE"/>
		<Row Tag="BURNED" Category="PLOTEFFECT_ATTRIBUTE"/>
		<!-- Weighting types-->
		<Row Tag="LIGHT" Category="PLOTEFFECT_ATTRIBUTE"/>
		<Row Tag="MEDIUM" Category="PLOTEFFECT_ATTRIBUTE"/>
		<Row Tag="HEAVY" Category="PLOTEFFECT_ATTRIBUTE"/>
		<!-- Time Attributes-->
		<Row Tag="TRANSIENT" Category="PLOTEFFECT_ATTRIBUTE"/>
		<Row Tag="PERMANENT" Category="PLOTEFFECT_ATTRIBUTE"/>
	</Tags>
	<TypeTags>
