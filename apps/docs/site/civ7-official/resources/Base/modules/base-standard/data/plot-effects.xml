		<Row Type="PLOTEFFECT_SNOW_HEAVY_TRANSIENT" Tag="TRANSIENT"/>
		<!-- Permanent -->
		<Row Type="PLOTEFFECT_SNOW_LIGHT_PERMANENT" Tag="SNOW"/>
		<Row Type="PLOTEFFECT_SNOW_LIGHT_PERMANENT" Tag="LIGHT"/>
		<Row Type="PLOTEFFECT_SNOW_LIGHT_PERMANENT" Tag="PERMANENT"/>
		<Row Type="PLOTEFFECT_SNOW_MEDIUM_PERMANENT" Tag="SNOW"/>
		<Row Type="PLOTEFFECT_SNOW_MEDIUM_PERMANENT" Tag="MEDIUM"/>
		<Row Type="PLOTEFFECT_SNOW_MEDIUM_PERMANENT" Tag="PERMANENT"/>
		<Row Type="PLOTEFFECT_SNOW_HEAVY_PERMANENT" Tag="SNOW"/>
		<Row Type="PLOTEFFECT_SNOW_HEAVY_PERMANENT" Tag="HEAVY"/>
