<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!--Vihren-->
	<Modifier id="VIHREN_CULTURE_DISASTERS" collection="COLLECTION_ALL_PLAYERS" effect="EFFECT_PLAYER_ADJUST_YIELD_FROM_DISTATERS">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_FEATURE">
				<Argument name="FeatureType">FEATURE_VIHREN</Argument>
			</Requirement>
		</SubjectRequirements>
		<OwnerRequirements>
			<Requirement type="REQUIREMENT_MAP_HAS_FEATURE">
				<Argument name="FeatureType">FEATURE_VIHREN</Argument>
			</Requirement>
		</OwnerRequirements>
		<Argument name="YieldType">YIELD_CULTURE</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">1</Argument>
		<Argument name="Tooltip">LOC_FEATURE_VIHREN_NAME</Argument>
	</Modifier>
	<Modifier id="VIHREN_HAPPINESS_DISASTERS" collection="COLLECTION_ALL_PLAYERS" effect="EFFECT_PLAYER_ADJUST_YIELD_FROM_DISTATERS">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_FEATURE">
				<Argument name="FeatureType">FEATURE_VIHREN</Argument>
			</Requirement>
		</SubjectRequirements>
		<OwnerRequirements>
			<Requirement type="REQUIREMENT_MAP_HAS_FEATURE">
				<Argument name="FeatureType">FEATURE_VIHREN</Argument>
			</Requirement>
		</OwnerRequirements>
		<Argument name="YieldType">YIELD_HAPPINESS</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">1</Argument>
		<Argument name="Tooltip">LOC_FEATURE_VIHREN_NAME</Argument>
	</Modifier>
	<!--Vinicunca -->
	<Modifier id="VINICUNCA_ADJACENT_YIELDS" collection="COLLECTION_ALL_PLOT_YIELDS" effect="EFFECT_ATTACH_MODIFIERS" permanent="true">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLOT_ADJACENT_FEATURE_TYPE_MATCHES">
				<Argument name="FeatureType">FEATURE_VINICUNCA</Argument>
			</Requirement>
			<Requirement type="REQUIREMENT_PLOT_IS_NATURAL_WONDER" inverse="true"/>
		</SubjectRequirements>
		<OwnerRequirements>
			<Requirement type="REQUIREMENT_MAP_HAS_FEATURE">
				<Argument name="FeatureType">FEATURE_VINICUNCA</Argument>
			</Requirement>
		</OwnerRequirements>
		<Argument name="ModifierId">ATTACH_VINICUNCA_YIELDS</Argument>
		<String context="Description">LOC_FEATURE_VINICUNCA_NAME</String>
	</Modifier>
	<!--Natural Wonder Adjacencies are implemented with nested Modifiers to avoid oversubscription to District Class change signals-->
	<Modifier id="ATTACH_VINICUNCA_YIELDS" collection="COLLECTION_SINGLE_PLOT_YIELDS" effect="EFFECT_PLOT_ADJUST_YIELD">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLOT_DISTRICT_CLASS">
				<Argument name="DistrictClass">RURAL, WILDERNESS</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="YieldType">YIELD_CULTURE</Argument>
		<Argument name="Amount">2</Argument>
		<Argument name="Tooltip">LOC_FEATURE_VINICUNCA_NAME</Argument>
	</Modifier>
</GameEffects>