<Database>
	<EnglishText>

		<!-- ==================================================	-->
		<!--	ASSYRIA							-->
		<!-- ==================================================	-->
		<Row Tag="LOC_TREE_CIVICS_AQ_ASSYRIA_NAME">
			<Text>Assyrian Civics</Text>
		</Row>
		<Row Tag="LOC_CIVIC_BIRTUTU_NAME">
			<Text>Birtūtu</Text>
		</Row>
		<Row Tag="LOC_CIVIC_BIRTUTU_QUOTE">
			<Text>"The city's wall I established firm as the mountains, and peoples of the land which my hands had conquered, I settled therein."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_BIRTUTU_AUTHOR">
			<Text>Sargon II</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TUPSARRUTU_NAME">
			<Text>Tupšarrūtu</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TUPSARRUTU_QUOTE">
			<Text>"You, O Assur, hold all knowledge from the ancient past to the distant future."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_TUPSARRUTU_AUTHOR">
			<Text>Ashurbanipal</Text>
		</Row>
		<Row Tag="LOC_CIVIC_KIBRAT_ARBA_I_NAME">
			<Text>Kibrāt Arba’i</Text>
		</Row>
		<Row Tag="LOC_CIVIC_KIBRAT_ARBA_I_QUOTE">
			<Text>"I led my armies from one end of the earth to the other and brought into submission all princes of the four quarters."</Text>
		</Row>
		<Row Tag="LOC_CIVIC_KIBRAT_ARBA_I_AUTHOR">
			<Text>Sennacherib</Text>
		</Row>
		<!-- Civic Description-->
		<Row Tag="LOC_MOD_BIRTUTU_TECH_MASTERY_CULTURE_DESCRIPTION">
			<Text>The Capital receives 2 [icon:YIELD_CULTURE] Culture for each Technology Mastery.</Text>
		</Row>
		<Row Tag="LOC_MOD_BIRTUTU_COMBAT_DEFENDING_PREVIEW">
			<Text>+{1_Amount} Birtūtu</Text>
		</Row>
		<Row Tag="LOC_MOD_BIRTUTU_COMBAT_DEFENDING_DESCRIPTION">
			<Text>Combat units receive +5 Combat Strength when defending against Ranged units.</Text>
		</Row>
		<Row Tag="LOC_MOD_TUPSARRUTU_GREATWORK_DESCRIPTION">
			<Text>When you capture a Settlement for the first time receive a Codex.</Text>
		</Row>
		<Row Tag="LOC_MOD_KIBRAT_ARBA_I_COMBAT_MAGARRU_DESCRIPTION">
			<Text>+5 Combat Strength to Magarru if they are in a Command Radius.</Text>
		</Row>
		<Row Tag="LOC_MOD_KIBRAT_ARBA_I_COMBAT_MAGARRU_PREVIEW">
			<Text>+{1_Amount} Kibrāt Arba’i</Text>
		</Row>
		<Row Tag="LOC_MOD_KIBRAT_ARBA_I_CAPTURE_SCIENCE_DESCRIPTION">
			<Text>+20% [icon:YIELD_SCIENCE] Science in Cities not founded by you.</Text>
		</Row>
		<Row Tag="LOC_MOD_TUPSARRUTU_HAPPINNESS_SCIENCE_BUILDING_DESCRIPTION">
			<Text>+2 [icon:YIELD_HAPPINESS] Happiness to Science Buildings.</Text>
		</Row>
		<!-- Unique Traditions-->
		<Row Tag="LOC_TRADITION_DURANI_NAME">
			<Text>Dūrāni</Text>
		</Row>
		<Row Tag="LOC_TRADITION_DURANI_DESCRIPTION">
			<Text>+1 [icon:YIELD_SCIENCE] Science on Fortification Buildings.</Text>
		</Row>
		<Row Tag="LOC_TRADITION_MIHISTU_NAME">
			<Text>Miḫiṣtu</Text>
		</Row>
		<Row Tag="LOC_TRADITION_MIHISTU_DESCRIPTION">
			<Text>+25% [icon:YIELD_PRODUCTION] Production towards Buildings and Wonders with a Great Work Slot.</Text>
		</Row>
		<Row Tag="LOC_TRADITION_GIRRU_NAME">
			<Text>Girru</Text>
		</Row>
		<Row Tag="LOC_TRADITION_GIRRU_DESCRIPTION">
			<Text>+3 [icon:YIELD_PRODUCTION] Production and [icon:YIELD_FOOD] Food in Settlements not founded by you.</Text>
		</Row>
	</EnglishText>
</Database>