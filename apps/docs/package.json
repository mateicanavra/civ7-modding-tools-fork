{
  "name": "@civ7/docs",
  "private": true,
  "scripts": {
    "predev": "pnpm -F @civ7/config build && pnpm -F @civ7/plugin-files build",
    "prebuild": "pnpm -F @civ7/config build && pnpm -F @civ7/plugin-files build",
    "dev": "bun run scripts/sync-resources.ts && bun run scripts/dev-staged.ts",
    "start": "mint dev -p 4000 --no-open",
    "build": "tsx scripts/sync-resources.ts && tsx scripts/validate-docs.ts && tsx scripts/broken-links-pages-only.ts",
    "migrate": "bun run scripts/migrate-site-to-pages.ts",
    "fix:links": "bun run scripts/fix-links.ts",
    "check": "bunx typescript@5.9.2 -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "mintlify": "^4.2.67"
  },
  "dependencies": {
    "@civ7/config": "workspace:*",
    "@civ7/plugin-files": "workspace:*"
  }
}
