<?xml version="1.0" encoding="utf-8"?>
<!-- This file is for changes to thing that exist ONLY in the Exploration Age -->
<!-- So changes to the Civ Ability and Civics -->
<!-- Changes to unique units would probably be here too -->
<Database>
	<!-- ==========================================
		Rearrange Civics
	=========================================== -->
	<!-- I'm swapping Nusantara and Gamelan in the tree -->
	<ProgressionTreePrereqs>
		<!-- Begin by deleting all the Civic Prereqs from Majapahit Civics -->
		<!-- Note how the tag is 'Delete' instead of 'Row' -->
		<Delete Node="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA"/>
		<Delete Node="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"/>
		<Delete Node="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"/>
		<Delete Node="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"/>
		<!-- Then add our new Civic requirements! -->
		<Row Node="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN" PrereqNode="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"/>
		<Row Node="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN" PrereqNode="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"/>
		<Row Node="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA" PrereqNode="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"/>
	</ProgressionTreePrereqs>
	<!-- Because Gamelan and Nusantara have swapped -->
	<!-- We need to update their costs -->
	<ProgressionTreeNodes>
		<Update>
			<Where ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"/>
			<Set Cost="1200"/>
		</Update>	
		<Update>
			<Where ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA"/>
			<Set Cost="2000"/>
		</Update>	
	</ProgressionTreeNodes>
	<!-- ==========================================
		Adjust Unlocks
		For simplicity's sake, I'm deleting all the old unlocks
		Then just reassigning as needed.
	=========================================== -->
	<ProgressionTreeNodeUnlocks>
		<!-- Delete existing Definitions -->
		<Delete ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA"/>
		<Delete ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"/>
		<Delete ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"/>
		<Delete ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"/>
		<!-- Add the new ones -->
		<!-- •••••• Constructibles •••••• -->
		<Row
			TargetType="WONDER_BOROBUDUR"
			TargetKind="KIND_CONSTRUCTIBLE"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"
			UnlockDepth="2"
			AIIgnoreUnlockValue="true"
		/>
		<Row
			TargetType="BUILDING_CANDI_BENTAR"
			TargetKind="KIND_CONSTRUCTIBLE"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"
			UnlockDepth="1"
		/>
		<Row
			TargetType="BUILDING_MERU"
			TargetKind="KIND_CONSTRUCTIBLE"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"
			UnlockDepth="1"
		/>
		<!-- •••••• Modifiers •••••• -->
		<Row
			TargetType="MOD_WAYANG_OVERBUILD_PRODUCTION"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"
			UnlockDepth="1"
		/>
		<Row
			TargetType="MOD_ALIRAN_KEPERCAYAAN_CONVERT_EXTRA_CULTURE"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"
			UnlockDepth="1"
		/>
		<Row
			TargetType="MOD_NUSUNTARA_COAST_ADJACENCY"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"
			UnlockDepth="1"
		/>
		<Row
			TargetType="MOD_EX_SETTLEMENT_CAP_INCREASE"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"
			UnlockDepth="1"
		/>
		<Row
			TargetType="MOD_NUSUNTARA_SEA_VS_LAND"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA"
			UnlockDepth="1"
		/>
		<Row
			TargetType="MOD_FXS_NUSUNTARA_TREASURE_FLEET_GENERATION"
			TargetKind="KIND_MODIFIER"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_NUSUNTARA"
			UnlockDepth="1"
		/>
		<!-- •••••• Traditions •••••• -->
		<Row
			TargetType="TRADITION_NEGARAKERTAGAMA"
			TargetKind="KIND_TRADITION"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_ALIRAN_KEPERCAYAAN"
			UnlockDepth="2"
		/>
		<Row
			TargetType="TRADITION_PANJI"
			TargetKind="KIND_TRADITION"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_WAYANG"
			UnlockDepth="2"
		/>
		<Row
			TargetType="TRADITION_SUBAK"
			TargetKind="KIND_TRADITION"
			ProgressionTreeNodeType="NODE_CIVIC_EX_MAJAPAHIT_GAMELAN"
			UnlockDepth="2"
		/>
	</ProgressionTreeNodeUnlocks>
	<!-- ==========================================
		New Unique Ability
	=========================================== -->
	<TraitModifiers>
		<Delete ModifierId="TRAIT_MOD_NEGARA_SPECIALIST_CAP_INCREASE"/>
		<Row TraitType="TRAIT_MAJAPAHIT_ABILITY" ModifierId="MOD_FXS_TRAIT_MAJAPAHIT_QUARTER_FOOD"/>
		<Row TraitType="TRAIT_MAJAPAHIT_ABILITY" ModifierId="MOD_FXS_TRAIT_MAJAPAHIT_QUARTER_FOOD_ISLAND"/>
	</TraitModifiers>
</Database>