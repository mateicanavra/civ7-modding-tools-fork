{
  "name": "civ7-modding-tools",
  "version": "1.3.0",
  "description": "CLI tools and utilities for Civilization VII modding, including resource extraction, graph visualization, and XML analysis",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "setup:corepack": "corepack enable && corepack prepare pnpm@10.10.0 --activate",
    "build": "turbo run build",
    "check": "turbo run check",
    "dev:cli": "pnpm -F @mateicanavra/civ7-cli dev",
    "dev:sdk": "pnpm -F @mateicanavra/civ7-sdk dev",
    "dev:docs": "pnpm -F @civ7/docs dev",
    "dev:playground": "pnpm -F @civ7/playground dev",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "clean": "turbo run clean",
    "publish:sdk": "pnpm -F @mateicanavra/civ7-sdk publish --access public",
    "publish:cli": "pnpm -F @mateicanavra/civ7-cli publish --access public",
    "publish:all": "pnpm publish:sdk && pnpm publish:cli",
    "link:cli": "pnpm -F @mateicanavra/civ7-cli run link:global",
    "unlink:cli": "pnpm -F @mateicanavra/civ7-cli run unlink:global",
    "refresh:data": "pnpm dev:cli -- zip default && pnpm dev:cli -- unzip default"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "mods/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateicanavra/civ7-modding-tools-fork.git"
  },
  "homepage": "https://github.com/mateicanavra/civ7-modding-tools-fork#readme",
  "bugs": {
    "url": "https://github.com/mateicanavra/civ7-modding-tools-fork/issues"
  },
  "author": "Matei <tools@matei.work>",
  "license": "MIT",
  "keywords": [
    "civilization-vii",
    "civ7",
    "modding",
    "tools",
    "cli",
    "xml",
    "graph-visualization",
    "typescript",
    "game-modding",
    "resource-extraction"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "@types/node": "^24.2.1",
      "rimraf": "^6.0.1"
    },
    "onlyBuiltDependencies": [
      "docsify",
      "esbuild",
      "puppeteer",
      "sharp"
    ]
  }
}
