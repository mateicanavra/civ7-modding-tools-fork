{
  "name": "civ7-modding-tools",
  "version": "1.3.0",
  "description": "CLI tools and utilities for Civilization VII modding, including resource extraction, graph visualization, and XML analysis",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "setup:corepack": "corepack enable && corepack prepare pnpm@10.10.0 --activate",
    "build": "turbo run build",
    "check": "turbo run check && pnpm lint:domain-refactor-guardrails",
    "check-types": "turbo run check",
    "dev:cli": "pnpm -F @mateicanavra/civ7-cli dev",
    "dev:sdk": "pnpm -F @mateicanavra/civ7-sdk dev",
    "dev:docs": "pnpm -F @civ7/docs dev",
    "dev:playground": "pnpm -F @civ7/playground dev",
    "lint": "turbo run lint",
    "test": "pnpm test:vitest && pnpm test:mapgen && pnpm -C mods/mod-swooper-maps test",
    "test:vitest": "vitest run",
    "test:ui": "vitest --ui",
    "clean": "turbo run clean",
    "publish:sdk": "pnpm -F @mateicanavra/civ7-sdk publish --access public",
    "publish:cli": "pnpm -F @mateicanavra/civ7-cli publish --access public",
    "publish:all": "pnpm publish:sdk && pnpm publish:cli",
    "link:cli": "pnpm -F @mateicanavra/civ7-cli run link:global",
    "unlink:cli": "pnpm -F @mateicanavra/civ7-cli run unlink:global",
    "refresh:data": "pnpm dev:cli -- data zip default && pnpm dev:cli -- data unzip default",
    "mods:import": "pnpm exec civ7 mod git import",
    "test:mapgen": "pnpm -C packages/mapgen-core test",
    "build:mapgen": "pnpm -C packages/mapgen-core build",
    "lint:adapter-boundary": "./scripts/lint/lint-adapter-boundary.sh",
    "lint:domain-refactor-guardrails": "./scripts/lint/lint-domain-refactor-guardrails.sh",
    "lint:adrs": "node scripts/lint/lint-doc-adrs.mjs",
    "lint:doc-ambiguity": "node scripts/lint/lint-doc-ambiguity.mjs",
    "deploy:mods": "turbo run deploy --filter='./mods/*'",
    "gt:import-worktree": "bash ./scripts/graphite-import-worktree.sh",
    "gt:import-pr": "bash ./scripts/graphite-import-pr.sh"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "mods/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateicanavra/civ7-modding-tools-fork.git"
  },
  "homepage": "https://github.com/mateicanavra/civ7-modding-tools-fork#readme",
  "bugs": {
    "url": "https://github.com/mateicanavra/civ7-modding-tools-fork/issues"
  },
  "author": "Matei <tools@matei.work>",
  "license": "MIT",
  "keywords": [
    "civilization-vii",
    "civ7",
    "modding",
    "tools",
    "cli",
    "xml",
    "graph-visualization",
    "typescript",
    "game-modding",
    "resource-extraction"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "@types/node": "^24.2.1",
      "rimraf": "^6.0.1"
    },
    "onlyBuiltDependencies": [
      "docsify",
      "esbuild",
      "puppeteer",
      "sharp"
    ]
  }
}
