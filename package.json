    "url": "git+https://github.com/izica/civ7-modding-tools.git"
  },
  "author": "izica <artemiztomska@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "civilization",
    "modding",
    "tools"
  ],
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.2",
      "@types/node": "^24.2.1",
      "rimraf": "^6.0.1"
