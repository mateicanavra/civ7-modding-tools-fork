{
  "name": "civ-mod-dacia",
  "private": true,
  "version": "1.0.0",
  "description": "This mod adds the Dacia civilization to Civilization VII, including Decebalus as a leader, along with unique abilities, units, and buildings.",
  "main": "index.js",
  "scripts": {
    "build": "tsx build.ts",
    "deploy": "bun run --filter @mateicanavra/civ7-cli dev -- mod manage deploy --input ./mod --id mod-swooper-civ-dacia",
    "docs": "docsify serve docs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check": "tsc -p tsconfig.json --noEmit",
    "build:deploy": "bun run build && bun run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateicanavra/civ-mod-dacia.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateicanavra/civ-mod-dacia/issues"
  },
  "homepage": "https://github.com/mateicanavra/civ-mod-dacia#readme",
  "dependencies": {
    "@mateicanavra/civ7-sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "docsify-cli": "^4.4.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "type": "module"
}
