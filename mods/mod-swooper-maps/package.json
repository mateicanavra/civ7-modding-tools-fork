{
  "name": "mod-swooper-maps",
  "version": "0.1.0",
  "private": true,
  "description": "Swooper Maps mod for Civilization VII",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "precheck": "pnpm -C ../../packages/mapgen-core build",
    "check": "tsc --noEmit",
    "pretest": "pnpm -C ../../packages/mapgen-core build",
    "test": "bun test",
    "deploy": "pnpm run build && pnpm exec civ7 mod manage deploy --input ./mod --id mod-swooper-maps"
  },
  "dependencies": {
    "@swooper/mapgen-core": "workspace:*",
    "@civ7/adapter": "workspace:*",
    "typebox": "^1.0.61"
  },
  "devDependencies": {
    "@civ7/types": "workspace:*",
    "esbuild": "^0.27.0",
    "tsup": "^8.3.0",
    "typescript": "^5.9.2"
  }
}
