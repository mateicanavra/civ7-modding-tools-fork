{
  "name": "mod-swooper-maps",
  "version": "0.1.0",
  "private": true,
  "description": "Swooper Maps mod for Civilization VII",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "precheck": "bun run --cwd ../../packages/mapgen-core build",
    "check": "tsc --noEmit",
    "pretest": "bun run --cwd ../../packages/mapgen-core build",
    "test": "bun test",
    "viz:foundation": "bun ./src/dev/viz/foundation-run.ts",
    "deploy": "bun run build && bun run --filter @mateicanavra/civ7-cli dev -- mod manage deploy --input \"$PWD/mod\" --id mod-swooper-maps"
  },
  "dependencies": {
    "@swooper/mapgen-core": "workspace:*",
    "@civ7/adapter": "workspace:*",
    "typebox": "^1.0.80"
  },
  "devDependencies": {
    "@civ7/types": "workspace:*",
    "esbuild": "^0.27.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
