{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@mapgen/domain/config": ["src/domain/config.ts"],
      "@mapgen/domain": ["src/domain/index.ts"],
      "@mapgen/domain/*": ["src/domain/*"]
    },
    "outDir": "./mod/maps",
    "rootDir": "./src",
    "declaration": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["@civ7/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/dev/**"]
}
