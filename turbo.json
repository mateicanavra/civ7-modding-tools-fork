{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**", "example-generated-mod/**", "mods/*/mod/**"]
    },
    "dev": { "cache": false, "persistent": true },
    "check": { "dependsOn": ["^check"], "outputs": [] },
    "lint": {},
    "test": { "dependsOn": ["^build"] },
    "clean": {}
  }
}
